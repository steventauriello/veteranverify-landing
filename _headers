/*
  # Force strict HTTPS everywhere
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Content Security Policy (loose-but-safe for active development)
  # - Allows inline styles/scripts for now (you can lock down later with nonces)
  # - Allows Google Fonts + GA/GTM + common HTTPS assets
  Content-Security-Policy:
    default-src 'self';
    base-uri 'none';
    frame-ancestors 'none';
    form-action 'self';
    upgrade-insecure-requests;
    img-src 'self' data: https:;
    font-src 'self' data: https: fonts.gstatic.com;
    style-src 'self' 'unsafe-inline' https: fonts.googleapis.com;
    script-src 'self' 'unsafe-inline' https: www.googletagmanager.com www.google-analytics.com;
    connect-src 'self' https: www.google-analytics.com;
    frame-src 'self' https: www.youtube-nocookie.com www.youtube.com player.vimeo.com;

  # Donâ€™t leak MIME or referrer info
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

  # Clickjacking & feature lockdown
  X-Frame-Options: DENY
  Permissions-Policy: camera=(), microphone=(), geolocation=(), payment=()

  # Cross-origin isolation (good defaults for static)
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin

  # Old browser hardening
  X-UA-Compatible: IE=edge
